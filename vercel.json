{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/*.js": {
            "runtime": "@vercel/node@3",
            "maxDuration": 30
        }
    }
}